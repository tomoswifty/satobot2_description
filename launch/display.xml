<?xml version="1.0" encoding="UTF-8"?>

<launch>
    <arg name="robot_model_path" default="$(find-pkg-share satobot2_description)/src/satobot2.urdf" />
    <arg name="rviz_config" default="$(find-pkg-share satobot2_description)/rviz/display_view.rviz" />
    <!-- /Users/ts/ros2/src/satobot2_description/rviz/display_panel_view.rviz -->
    <arg name="qss" default="$(find-pkg-share satobot2_description)/rviz/msd_custom_theme.qss" />
    <!-- rviz/msd_custom_theme.qss -->

    <node pkg="robot_state_publisher" exec="robot_state_publisher">
        <param name="robot_description" value="$(command 'xacro $(var robot_model_path)')"/>
    </node>
    <node pkg="joint_state_publisher" exec="joint_state_publisher" />
    <node pkg="rviz2" exec="rviz2" name="satobot2_rviz2" output="screen" 
        args="--stylesheet $(var qss) -d $(var rviz_config)"/>
</launch>